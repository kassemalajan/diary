const int RELAY_PIN = 3;

int soilLevel =0;
void setup(){
  pinMode(RELAY_PIN, OUTPUT);
  Serial.begin(9600);
}

void loop(){
  soilLevel = analogRead(A0);

  Serial.print("Soil moisture = ");
  Serial.println(soilLevel);
 
  if (soil > 800){
    digitalWrite(RELAY_PIN, HIGH);
  }
  else
    digitalWrite(RELAY_PIN, LOW);
    delay(1000);
}
